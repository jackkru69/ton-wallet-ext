{
  "manifest_version": 2,
  "name": "ShardEx",
  "homepage_url": "https://rsquad.io",
  "version": "0.1.1",
  "description": "FreeTON wallet",
  "default_locale": "en",
  "content_security_policy": "script-src 'self' 'wasm-eval' 'unsafe-eval'; object-src 'self'",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ShardEx",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
